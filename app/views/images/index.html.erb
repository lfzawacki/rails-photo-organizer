  <% if @category %>
  <div id="category-title">
    Mostando imagens de '<%= @category %>'
  </div>
  <% end %>

  <% @images.each do |img| %>

    <%= link_to image_tag(img.url_small, :value => img.id), img,
        :class => 'image-box', :title => img.md5 %>
  <% end %>
</div>

